<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/fondoRecomendacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/descripcionRecomendacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/fondoRecomendacion"
        app:layout_constraintBottom_toBottomOf="@id/fondoRecomendacion"
        app:layout_constraintEnd_toEndOf="@id/fondoRecomendacion"
        app:layout_constraintStart_toStartOf="@id/fondoRecomendacion"
        android:padding="14dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="-5"
        android:shadowDy="5"
        android:shadowRadius="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>